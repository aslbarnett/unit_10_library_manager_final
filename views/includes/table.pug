table
    thead
        if table === 'book'
            tr
                th Title
                |
                th Author
                |
                th Genre
                |
                th Year Released
        else if table === 'loan'
            tr
                th Book
                |
                th Patron
                |
                th Loaned on
                |
                th Return by
                |
                th Returned on
                |
                th Action
        else if table === 'patron'
            tr
                th Name
                |
                th Address
                |
                th Email
                |
                th Library ID
                |
                th Zip

    |
    tbody
        if table === 'book'
            each book in books
                tr
                    td
                        a(href=`/books/${book.id}`)= book.title
                    |
                    td= book.author
                    |
                    td= book.genre
                    |
                    td= book.first_published
                |
        else if table === 'loan'
            each loan in loans
                tr
                    td
                        a(href='#')= loan.Book.title
                    |
                    td
                        a(href='#')= loan.Patron.first_name + ' ' + loan.Patron.last_name
                    |
                    td= loan.loaned_on
                    |
                    td= loan.return_by
                    |
                    td
                    |
                    td
                        a.button(href='#') Return Book
        else if table === 'patron'
            each patron in patrons
                tr
                    td
                        a(href='#')= patron.first_name + ' ' + patron.last_name
                    |
                    td= patron.address
                    |
                    td= patron.email
                    |
                    td= patron.library_id
                    |
                    td= patron.zip_code